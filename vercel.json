{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "Client/dist" }
    },
    {
      "src": "Server/package.json",
      "use": "@vercel/node",
      "config": { "distDir": "Server/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/Server/dist/$1" },
    { "src": "/(.*)", "dest": "/Client/dist/$1" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/" }
  ]
}
